            .row.row--bg
                //- .shadow
                .banner.container
                    h1.banner__title Compare Prices. Book Tickets. Send Luggage
                    p.banner__desc Search Through 15,802 Buses Across Nigeria & Ghana
                    .box
                        .box__type
                            .box__tab.box--active
                                p One way
                            .box__tab
                                p Round trip
                        .box__date
                            .input-box
                                label(for="park")
                                input(type="text" placeholder="Search by State & Park")#park.input.input1
                            .input-box
                                label(for="state")
                                input(type="text" placeholder="To State")#state.input.input2
                            .input-box
                                label(for="date")
                                span.icon3
                                input(type="text" placeholder="Departure Date")#date.input.input3
                            .input-box
                                label(for="seat")
                                input(type="text" placeholder="No of Seat")#seat.input.input4
                        .btn
                            button.btn__search Search Bus
                            img(src="img/icon-arrow-white.png")
            //- .row.row--info
            .row.row__relative
                .row--info
                .info.container
                    .info__box
                        button.info__title
                            h1 COMPARE PRICES FARE
                        .info__num
